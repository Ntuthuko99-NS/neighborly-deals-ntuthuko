import React, { useState, useEffect } from 'react';
import { base44 } from '@/api/base44Client';
import { useSearchParams } from 'react-router-dom';
import { createPageUrl } from '@/utils';
import { Link } from 'react-router-dom';
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { Avatar, AvatarFallback, AvatarImage } from "@/components/ui/avatar";
import { Loader2, MapPin, ShieldCheck, MessageCircle, Share2, Heart, ChevronLeft, ChevronRight } from "lucide-react";
import { MapContainer, TileLayer, Marker, Popup } from 'react-leaflet';
import 'leaflet/dist/leaflet.css';
import { toast } from "sonner";

export default function ListingDetails() {
    const [searchParams] = useSearchParams();
    const id = searchParams.get('id');
    const [listing, setListing] = useState(null);
    const [seller, setSeller] = useState(null);
    const [loading, setLoading] = useState(true);
    const [activeImage, setActiveImage] = useState(0);
    const [currentUser, setCurrentUser] = useState(null);

    useEffect(() => {
        const fetchDetails = async () => {
            if (!id) return;
            try {
                // Fetch listing
                const items = await base44.entities.Listing.list({ filter: { id }, limit: 1 });
                if (items.length > 0) {
                    const item = items[0];
                    setListing(item);
                    
                    // Fetch seller info (using email from created_by)
                    const users = await base44.entities.User.list({ filter: { email: item.created_by } });
                    if (users.length > 0) {
                        setSeller(users[0]);
                    }
                }
                
                const user = await base44.auth.me().catch(() => null);
                setCurrentUser(user);

            } catch (err) {
                console.error(err);
            } finally {
                setLoading(false);
            }
        };
        fetchDetails();
    }, [id]);

    const handleContact = async () => {
        if (!currentUser) {
            base44.auth.redirectToLogin();
            return;
        }
        
        if (!seller) {
            toast.error("Seller info unavailable");
            return;
        }

        try {
            // Create initial message
            await base44.entities.Message.create({
                content: `Hi, is this ${listing.title} still available?`,
                listing_id: listing.id,
                to_user_id: seller.id,
                from_user_id: currentUser.id,
                is_read: false
            });
            toast.success("Message sent!");
            // Redirect to messages
            window.location.href = createPageUrl('Messages');
        } catch (error) {
            console.error(error);
            toast.error("Failed to send message");
        }
    };

    if (loading) return <div className="flex justify-center p-12"><Loader2 className="animate-spin" /></div>;
    if (!listing) return <div className="text-center p-12">Item not found</div>;

    return (
        <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
            {/* Left Column: Images */}
            <div className="lg:col-span-2 space-y-4">
                <div className="relative aspect-video bg-slate-100 rounded-3xl overflow-hidden shadow-sm group">
                    <img 
                        src={listing.images?.[activeImage]} 
                        alt={listing.title} 
                        className="w-full h-full object-contain backdrop-blur-xl bg-black/5"
                    />
                    {listing.images?.length > 1 && (
                        <>
                            <button 
                                onClick={() => setActiveImage(prev => prev === 0 ? listing.images.length - 1 : prev - 1)}
                                className="absolute left-4 top-1/2 -translate-y-1/2 p-2 bg-white/80 rounded-full opacity-0 group-hover:opacity-100 transition-opacity"
                            >
                                <ChevronLeft className="w-6 h-6" />
                            </button>
                            <button 
                                onClick={() => setActiveImage(prev => (prev + 1) % listing.images.length)}
                                className="absolute right-4 top-1/2 -translate-y-1/2 p-2 bg-white/80 rounded-full opacity-0 group-hover:opacity-100 transition-opacity"
                            >
                                <ChevronRight className="w-6 h-6" />
                            </button>
                        </>
                    )}
                </div>
                {listing.images?.length > 1 && (
                    <div className="flex gap-2 overflow-x-auto pb-2">
                        {listing.images.map((img, idx) => (
                            <button 
                                key={idx}
                                onClick={() => setActiveImage(idx)}
                                className={`w-20 h-20 rounded-xl overflow-hidden border-2 transition-all shrink-0 ${activeImage === idx ? 'border-indigo-600 ring-2 ring-indigo-100' : 'border-transparent opacity-60 hover:opacity-100'}`}
                            >
                                <img src={img} className="w-full h-full object-cover" />
                            </button>
                        ))}
                    </div>
                )}

                <div className="bg-white rounded-3xl p-6 md:p-8 border border-slate-200 shadow-sm">
                    <div className="flex justify-between items-start mb-4">
                        <div>
                            <h1 className="text-3xl font-bold text-slate-900 mb-2">{listing.title}</h1>
                            <div className="flex items-center gap-4 text-slate-500">
                                <span className="flex items-center gap-1">
                                    <MapPin className="w-4 h-4" /> {listing.suburb || "Nearby"}
                                </span>
                                <span>•</span>
                                <span>Posted {new Date(listing.created_date).toLocaleDateString()}</span>
                            </div>
                        </div>
                        <div className="text-right">
                            <div className="text-3xl font-bold text-slate-900">ZAR {listing.price?.toLocaleString()}</div>
                            <Badge variant="secondary" className="mt-1 capitalize">{listing.condition}</Badge>
                        </div>
                    </div>

                    <hr className="my-6 border-slate-100" />

                    <div className="prose prose-slate max-w-none">
                        <h3 className="font-semibold text-lg mb-2">Description</h3>
                        <p className="whitespace-pre-wrap text-slate-600 leading-relaxed">{listing.description}</p>
                    </div>

                    {listing.lat && listing.lng && (
                        <div className="mt-8">
                            <h3 className="font-semibold text-lg mb-4">Location</h3>
                            <div className="h-64 rounded-2xl overflow-hidden border border-slate-200 relative z-0">
                                <MapContainer 
                                    center={[listing.lat, listing.lng]} 
                                    zoom={14} 
                                    style={{ height: '100%', width: '100%' }}
                                    scrollWheelZoom={false}
                                >
                                    <TileLayer
                                        url="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"
                                    />
                                    <Marker position={[listing.lat, listing.lng]}>
                                        <Popup>Exact location provided upon purchase</Popup>
                                    </Marker>
                                </MapContainer>
                            </div>
                            <p className="text-xs text-slate-400 mt-2 text-center">Approximate location shown for safety</p>
                        </div>
                    )}
                </div>
            </div>

            {/* Right Column: Seller & Actions */}
            <div className="space-y-6">
                <div className="bg-white rounded-3xl p-6 border border-slate-200 shadow-sm sticky top-24">
                    <div className="flex items-center gap-4 mb-6">
                        <Avatar className="w-16 h-16 border-2 border-slate-100">
                            <AvatarImage src={seller?.avatar_url} />
                            <AvatarFallback className="text-lg font-bold bg-indigo-50 text-indigo-600">
                                {seller?.full_name?.[0] || listing.created_by[0].toUpperCase()}
                            </AvatarFallback>
                        </Avatar>
                        <div>
                            <div className="font-bold text-lg flex items-center gap-1">
                                {seller?.full_name || "Seller"}
                                {seller?.is_verified && <ShieldCheck className="w-4 h-4 text-blue-500" />}
                            </div>
                            <div className="text-sm text-slate-500">Member since {seller ? new Date(seller.created_date).getFullYear() : '2023'}</div>
                            {seller?.rating_avg > 0 && (
                                <div className="flex items-center text-yellow-500 text-sm mt-1">
                                    ★ {seller.rating_avg} ({seller.review_count})
                                </div>
                            )}
                        </div>
                    </div>

                    <div className="space-y-3">
                        <Button className="w-full h-12 text-lg bg-indigo-600 hover:bg-indigo-700 rounded-xl" onClick={handleContact}>
                            <MessageCircle className="w-5 h-5 mr-2" /> Message Seller
                        </Button>
                        <div className="grid grid-cols-2 gap-3">
                            <Button variant="outline" className="h-12 rounded-xl">
                                <Heart className="w-4 h-4 mr-2" /> Save
                            </Button>
                            <Button variant="outline" className="h-12 rounded-xl">
                                <Share2 className="w-4 h-4 mr-2" /> Share
                            </Button>
                        </div>
                    </div>

                    <div className="mt-6 bg-slate-50 p-4 rounded-xl text-sm text-slate-600 space-y-2">
                        <div className="font-semibold mb-1">Safety Tips</div>
                        <p>• Meet in a public place</p>
                        <p>• Check the item before paying</p>
                        <p>• Pay only after collecting the item</p>
                    </div>
                </div>
            </div>
        </div>
    );
}
